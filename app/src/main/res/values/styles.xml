<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MarginLogin">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="MarginPattern">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="MarginCardListPattern">
        <item name="android:layout_margin">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="PaddingCardListPattern">
        <item name="android:padding">10dp</item>
    </style>

    <style name="TextInputPattern">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="TextSettings">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:fontFamily">Arial</item>

        <item name="android:padding">8dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@color/colorGreySettings</item>

    </style>

    <style name="TextBtnPattern">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBtnNavigatePattern">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextTitlePattern">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextHelpLogin">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
