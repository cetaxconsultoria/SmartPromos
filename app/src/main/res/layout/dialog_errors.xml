<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerErrors"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_transparent_grey">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        android:background="@drawable/border_radius_white"
        android:id="@+id/container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="26dp"
            android:paddingBottom="26dp"
            android:paddingRight="26dp"
            android:paddingLeft="26dp"
            android:id="@+id/containerNotice">

            <TextView
                android:text=""
                android:id="@+id/txtTitleDialog"
                android:textSize="26sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextTitlePattern"/>

            <TextView
                android:text=""
                android:id="@+id/descDialog"
                android:textSize="18sp"
                android:textColor="@color/colorHint"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/txtTitleDialog" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:id="@+id/containerButtons"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btnClose"
                android:text="@string/btn_close"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_bottom_btn_green"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/TextBtnPattern"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>