<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="0dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:id="@+id/container">

    <LinearLayout
        android:id="@+id/containerDesc"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <ImageView
                android:id="@+id/imageCupom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/imagem_capa_cupom"/>

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:text="100"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/btn_full_rounded_green"/>

            <TextView
                android:id="@+id/tituCoupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desconto no happyhour"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/bg_transparent_grey"
                style="@style/PaddingCardListPattern"/>

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PaddingCardListPattern">

                <TextView
                    android:id="@+id/txtShortDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Ganhe 10% durante o happy hour"
                    android:textColor="@color/colorHint"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/txtLocal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Bela Vista - São Paulo. 9km"
                    android:textSize="14sp"
                    android:textColor="@color/colorHint"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtUtilizados"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="9 utilizados"
                        android:textSize="14sp"
                        android:textColor="@color/colorHint"/>

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Válida até 30/03/2016"
                        android:textSize="14sp"
                        android:textColor="@color/colorHint"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>